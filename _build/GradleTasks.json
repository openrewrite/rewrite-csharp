{
  "$schema": "https://raw.githubusercontent.com/nuke-build/nuke/master/source/Nuke.Tooling.Generator/schema.json",
  "name": "Gradle",
  "officialUrl": "https://gradle.org/",
  "help": "Gradle build tool for Java",
  "customExecutable": true,
  "customLogger": true,
  "tasks": [
    {
      "help": "Runs task(s)",
      "settingsClass": {
        "properties": [
          {
            "name": "Tasks",
            "type": "List<KnownGradleTasks>",
            "format": "{value}",
            "position": 1
          },
          {
            "name": "ExcludeTasks",
            "type": "List<KnownGradleTasks>",
            "format": "-x {value}"
          },
          {
            "name": "WarningMode",
            "type": "WarningMode",
            "format": "-Dorg.gradle.warning.mode={value}"
          },
          {
            "name": "JvmOptions",
            "type": "string",
            "format": "-Dorg.gradle.jvmargs={value}"
          },
          {
            "name": "ProjectProperty",
            "type": "List<string>",
            "format": "-P{value}"
          },
          {
            "name": "ForceSigning",
            "type": "bool",
            "format": "-PforceSigning"
          },
          {
            "name": "Verbosity",
            "type": "GradleVerbosity",
            "format": "--{value}",
            "customValue": true
          },
          {
            "name": "Version",
            "type": "string",
            "format": "-Prelease.version={value} -Pversion={value}",
            "customValue": true
          }
        ]
      }
    }
  ],
  "enumerations": [
    {
      "name": "WarningMode",
      "values": [
        "All",
        "Summary",
        "None",
        "Fail"
      ]
    },
    {
      "name": "GradleVerbosity",
      "values": [
        "Quite",
        "Info",
        "Debug"
      ]
    }
  ]
}
