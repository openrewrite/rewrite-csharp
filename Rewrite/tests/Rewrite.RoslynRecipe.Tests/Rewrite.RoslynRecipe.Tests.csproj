<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <NoWarn>NU1701</NoWarn>
    </PropertyGroup>
    <PropertyGroup>
        <IsPackable>false</IsPackable>
        <IsTestProject>true</IsTestProject>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="TUnit" Version="0.66.13" />
        <PackageReference Include="Microsoft.CodeAnalysis" Version="$(MicrosoftCodeAnalysisVersion)" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="$(MicrosoftCodeAnalysisVersion)" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Analyzer.Testing" Version="1.1.3-beta1.25478.1" />
        <PackageReference Include="FluentAssertions" Version="7.2.0" />
        <ProjectReference Include="..\..\src\Rewrite.Test\Rewrite.Test.csproj" />
        <PackageReference Include="Microsoft.Testing.Extensions.TrxReport" Version="1.8.4" />
        <PackageReference Include="coverlet.collector" Version="6.0.4">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <ProjectReference Include="..\..\src\Rewrite.Diagnostics\Rewrite.Diagnostics.csproj" />
        <ProjectReference Include="..\..\src\Rewrite.RoslynRecipe\Rewrite.RoslynRecipe.csproj" />

    </ItemGroup>
    <ItemGroup>
        <Compile Include="..\Rewrite.CSharp.Tests\CommonTestHooks.cs">
            <Link>CommonTestHooks.cs</Link>
        </Compile>
    </ItemGroup>

</Project>